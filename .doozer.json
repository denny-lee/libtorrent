{
  "submodules": ["simulation/libsimulator"],
  "targets": {
    "xenial-amd64": {
      "buildenv": "xenial-amd64",
      "builddeps": ["build-essential", "libssl-dev", "libboost-all-dev"],
      "buildcmd": [ "cd simulation", "bjam -j${PARALLEL}"]
    },
    "xenial-armhf": {
      "buildenv": "xenial-armhf",
      "builddeps": ["build-essential", "libssl-dev", "libboost-all-dev"],
      "buildcmd": [ "cd simulation", "bjam -j${PARALLEL}"]
    },
    "xenial-arm64": {
      "buildenv": "xenial-arm64",
      "builddeps": ["build-essential", "libssl-dev", "libboost-all-dev"],
      "buildcmd": [ "cd simulation", "bjam"]
    },
    "macOS": {
      "buildenv": "osx",
      "homebrew": { "formulae": ["boost-build", "wget"] },
      "buildcmd": [
         "wget --quiet -O boost.zip http://pilotfiber.dl.sourceforge.net/project/boost/boost/1.55.0/boost_1_55_0.zip",
         "unzip -qq boost.zip",
         "cd simulation",
         "echo \"using darwin : : : <cxxflags>-std=c++11 ;\" > ~/user-config.jam",
         "BOOST_ROOT=${PWD}/../boost_1_55_0 bjam --hash -j${PARALLEL}"
      ]
    }
  }
}

